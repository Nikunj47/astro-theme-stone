---
const services = [
  {
    step: '01',
    name: 'Campaign Management',
    description: 'Create and manage multi-channel marketing campaigns across email, SMS, and social media from a single dashboard.',
  },
  {
    step: '02',
    name: 'Conversations',
    description: 'Centralize 2-way messaging in one place. View and respond to all communication history across multiple channels.',
  },
  {
    step: '03',
    name: 'Automation Builder',
    description: 'Visual workflow designer for creating complex marketing automations triggered by user behavior and custom events.',
  },
  {
    step: '04',
    name: 'Unified Analytics',
    description: 'Track performance across all your social media with consolidated reporting and ROI measurement tools.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Core Features</h2>
      <div class="grid gap-8 lg:grid-cols-4">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-6 rounded-3xl px-6 py-8">
              <p class="text-sm">{service.step}</p>
              <div class="flex flex-col gap-3">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg ">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>