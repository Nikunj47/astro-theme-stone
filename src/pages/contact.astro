---
import ContactForm from '../components/contact/ContactForm.astro';
import ContactInfo from '../components/contact/ContactInfo.astro';
import Layout from '../layouts/Layout.astro';

const pageDescription = "Contact our team to learn more about how we can help you.";
const pageTitle = "Contact Â· Prime Solutions";
---

<Layout description={pageDescription} title={pageTitle}>
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- 2-column layout: left = contact info + calendly, right = form -->
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-16">
        <!-- Left Column -->
        <ContactInfo />
        <!-- Right Column -->
        <ContactForm />
      </div>
    </div>
  </section>
</Layout>
